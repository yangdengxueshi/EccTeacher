<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/bg_white_rounded_rectangle"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rank_clacs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            tools:text="卫生得分"/>

        <TextView
            android:id="@+id/tv_rank_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:textColor="@color/register_yellow_red"
            android:textSize="@dimen/sp_18"
            tools:text="100"/>
    </LinearLayout>

    <RatingBar
        android:id="@+id/mrb_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="10"
        android:stepSize="0.5"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_content_detail"
        android:gravity="top"
        android:hint="@string/please_input_notice_content"
        android:inputType="none"
        android:minHeight="@dimen/dp_100"
        android:padding="@dimen/dp_2"/>
</LinearLayout>
