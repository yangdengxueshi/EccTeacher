<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.ModifyPwdFragment">

    <include layout="@layout/include_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.618"
            android:gravity="center"
            android:text="@string/old_password"
            android:textColor="@color/register_label_color"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/iv_clean_old_pwd"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/selector_show_hide_pwd"
                app:passwordToggleEnabled="true">

                <AutoCompleteTextView
                    android:id="@+id/actv_old_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/please_input_old_pwd"
                    android:inputType="textWebPassword"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:textSize="18sp"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/iv_clean_old_pwd"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_circle_click"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_01"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@color/divide_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.618"
            android:gravity="center"
            android:text="@string/new_password"
            android:textColor="@color/register_label_color"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/iv_clean_new_pwd"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/selector_show_hide_pwd"
                app:passwordToggleEnabled="true">

                <AutoCompleteTextView
                    android:id="@+id/actv_new_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/please_input_new_pwd"
                    android:inputType="textWebPassword"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:textSize="18sp"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/iv_clean_new_pwd"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_circle_click"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_01"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@color/divide_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.618"
            android:gravity="center"
            android:text="@string/confirm_pwd"
            android:textColor="@color/register_label_color"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/iv_clean_confirm_pwd"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/selector_show_hide_pwd"
                app:passwordToggleEnabled="true">

                <AutoCompleteTextView
                    android:id="@+id/actv_confirm_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/please_confirm_new_pwd"
                    android:inputType="textWebPassword"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:textSize="18sp"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/iv_clean_confirm_pwd"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_circle_click"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_01"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@color/divide_line_color"/>

    <Button
        android:id="@+id/btn_confirm_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_page_btn"
        android:text="@string/confirm_modify"
        android:textColor="@color/white"/>
</LinearLayout>
