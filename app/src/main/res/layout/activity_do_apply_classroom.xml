<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DoApplyClassroomActivity">

    <include layout="@layout/toolbar_common"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center"
                    android:text="@string/teaching_building"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_18"/>

                <Spinner
                    android:id="@+id/s_select_teaching_building"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownVerticalOffset="?attr/actionBarSize"/>
            </LinearLayout>

            <include layout="@layout/horizontal_divider_line_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center"
                    android:text="@string/select_classroom"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_18"/>

                <Spinner
                    android:id="@+id/s_select_class_room"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownVerticalOffset="?attr/actionBarSize"/>
            </LinearLayout>

            <include layout="@layout/horizontal_divider_line_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center"
                    android:text="@string/start_time"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_18"/>

                <TextView
                    android:id="@+id/tv_select_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/please_select_start_time"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_18"/>
            </LinearLayout>

            <include layout="@layout/horizontal_divider_line_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center"
                    android:text="@string/end_time"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_18"/>

                <TextView
                    android:id="@+id/tv_select_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/please_select_end_time"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_18"/>
            </LinearLayout>

            <include layout="@layout/horizontal_divider_line_1"/>

            <EditText
                android:id="@+id/et_apply_usage_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_content_detail"
                android:gravity="top"
                android:hint="@string/please_input_apply_usage_detail"
                android:inputType="none"
                android:minHeight="@dimen/dp_100"
                android:padding="@dimen/dp_2"/>

            <Button
                android:id="@+id/btn_confirm_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/bg_page_btn"
                android:text="@string/confirm_apply"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
