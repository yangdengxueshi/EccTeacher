<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_ranking_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@drawable/bg_student_header">

    <TextView
        android:id="@+id/tv_ranking"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#4F4F4F"
        android:textSize="@dimen/sp_16"
        tools:background="@color/red"
        tools:text="1"/>

    <include layout="@layout/vertical_divide_line_1"/>

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#4F4F4F"
        android:textSize="@dimen/sp_16"
        tools:background="@color/orange"
        tools:text="高一一班"/>

    <include layout="@layout/vertical_divide_line_1"/>

    <TextView
        android:id="@+id/tv_roral_total_score"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#2FCDEA"
        android:textSize="@dimen/sp_16"
        tools:background="@color/yellow"
        tools:text="100"/>
</LinearLayout>
