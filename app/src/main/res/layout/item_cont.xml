<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:gravity="center_vertical">

    <com.allen.library.SuperButton
        android:id="@+id/sb_surname"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_5"
        app:sShapeType="oval"
        app:sSolidColor="#00000000"
        app:sStrokeWidth="@dimen/dp_1"
        tools:sStrokeColor="@color/colorAccent"
        tools:text="杨"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cont_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            tools:text="杨灯"/>

        <TextView
            android:id="@+id/tv_cont_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            tools:text="18234142435"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cont_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:contentDescription="@null"
        android:src="@drawable/ic_cont_chat"/>

    <ImageView
        android:id="@+id/iv_cont_dail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:contentDescription="@null"
        android:src="@drawable/ic_cont_dail"/>
</LinearLayout>
