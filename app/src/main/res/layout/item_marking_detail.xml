<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_modify_score"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/rc_white_bg_shape"
    android:padding="@dimen/dp_10">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_mark_detail"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp_01"
        android:paddingStart="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mark_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                tools:text="卫生"/>

            <TextView
                android:id="@+id/tv_mark_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/tv_score"
                android:textColor="@color/register_yellow_red"
                android:textSize="@dimen/sp_18"
                tools:text="9.0 "/>

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_mark_value"
                android:layout_alignParentEnd="true"
                android:text="@string/score_"
                android:textSize="@dimen/sp_8"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_marker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2FCDEA"
            android:textSize="@dimen/sp_12"
            tools:text="评分老师:刘老师"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/teacher_comment"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/tv_mark_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            tools:text="AAAAAAAAAAAAAAAAAAAAAAABBBBBBBBBBBBBBBBBBCCCCCCCCCCCCCCCCCCCCCCC"/>

        <TextView
            android:id="@+id/tv_mark_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#999999"
            android:textSize="@dimen/sp_10"
            tools:text="2018-6-15 14:37"/>
    </LinearLayout>
</LinearLayout>
