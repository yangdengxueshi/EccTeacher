<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_news_and_info_cover"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginEnd="@dimen/dp_20"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        tools:background="#00FF00"
        tools:src="@drawable/ic_default_avatar"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_70"
        android:layout_weight="1"
        tools:background="#FF0000">

        <TextView
            android:id="@+id/tv_news_and_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            tools:text="学校介绍"/>

        <TextView
            android:id="@+id/tv_news_and_info_digist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_news_and_info_title"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            tools:text="在名称中使用上述字样的，应当是行业的限定语并符合国家有关规定。"/>

        <TextView
            android:id="@+id/tv_news_and_info_readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:drawableStart="@drawable/ic_scan"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="@dimen/sp_8"
            tools:text="99"/>

        <TextView
            android:id="@+id/tv_news_and_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:drawableStart="@drawable/ic_time"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxWidth="400dp"
            android:textColor="#999999"
            android:textSize="@dimen/sp_10"
            tools:text="发表于2018年5月30日 19:39"/>
    </RelativeLayout>
</LinearLayout>
